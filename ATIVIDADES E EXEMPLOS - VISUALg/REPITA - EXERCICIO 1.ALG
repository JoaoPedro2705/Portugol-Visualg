Algoritmo "REPITA - EXERCICIO 1"
Var
   num,soma:inteiro
Inicio
   soma <- 0
   repita
      escreval ("Digite Um Numero: ")
      leia(num)
      soma <- soma + num
      escreval("Para Finalizar Digite o numero 0.")
   ate (num = 0)


   escreval (" O total da soma dos valores ficou : ",soma)


Fimalgoritmo